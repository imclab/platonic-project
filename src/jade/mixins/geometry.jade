mixin triangle(mesh_id, light)
    - light = light || 0
    .mesh.triangle(data-mesh-id="#{mesh_id}", data-light="#{light}")
        .face(data-face-id="0")


//- Plane
//- 
//- @param mesh-id
//- @param light

mixin plane(mesh_id, light)
    - light = light || 0
    .mesh.plane(data-mesh-id="#{mesh_id}", data-light="#{light}")
        .face(data-face-id="0")


//- Plane
//- 
//- @param mesh-id
//- @param light

mixin cube(mesh_id, light)
    - light = light || 0
    .mesh.cube(data-mesh-id="#{mesh_id}", data-light="#{light}")
        - for(i = 0; i < 6; i++)
            .face(data-face-id="#{i}")


//- Pyramid
